<% provide(:title, 'Publicar Anuncio') %>
<h1>Registro</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@post, url: add_path) do |f| %>
        
            <%= f.label :descrip %>
            <%= f.text_field :descrip %>
            
            <%= f.label :mensualidad %>
            <%= f.text_field :mensualidad %>
            
            
            <%= f.submit "Publicar", class: "btn btn-primary" %>
        <% end %>
        
    </div>
    
    
</div>